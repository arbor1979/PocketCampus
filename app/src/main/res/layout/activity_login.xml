<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:visibility="visible">

    <Button
        android:id="@+id/btn_experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:background="@drawable/bg_title_bar_btn"
        android:text="@string/first_experience"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:visibility="gone" />

    <LinearLayout
        style="@android:style/ButtonBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dip">


        <ImageView
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:contentDescription="@null"
            android:src="@drawable/login_logo" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TableRow
                android:id="@+id/table_item"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/round_corner_bg">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="8.0dp"
                    android:contentDescription="@null"
                    android:paddingTop="2dip"
                    android:paddingBottom="2dip"
                    android:src="@drawable/login_userphoto" />

                <EditText
                    android:id="@+id/login_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="10.0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_title_bar_btn"
                    android:hint="@string/hint_login_username"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_big" />

                <ImageButton
                    android:id="@+id/login_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="1dip"
                    android:layout_marginRight="1dip"
                    android:layout_marginBottom="1dip"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:padding="5dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/login_btn_bg_nor" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_corner_bg">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="8.0dp"
                    android:contentDescription="@null"
                    android:paddingTop="2dip"
                    android:paddingBottom="2dip"
                    android:src="@drawable/login_password" />

                <EditText
                    android:id="@+id/login_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="10.0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/hint_login_password"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:textColor="@color/white"
                    android:nextFocusDown="@+id/btn_login"
                    android:textSize="@dimen/text_size_big" />

            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/ll_xieyi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_greet_xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="同意隐私政策"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="《隐私政策》"
                android:textColor="#3F51B5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">


        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dip">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="120dp"
                android:layout_height="wrap_content"

                android:layout_alignParentLeft="true"
                android:layout_marginLeft="50dip"
                android:background="@drawable/bg_title_bar_btn"
                android:text="@string/login"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_big" />

            <Button
                android:id="@+id/btn_resetpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:background="@drawable/bg_title_bar_btn"
                android:text="@string/login_forgotpwd"
                android:textColor="#ffffff"
                android:textSize="18sp"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_copyright"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="20dip"
            android:gravity="bottom"
            android:text="@string/login_bottom"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_micro" />

    </LinearLayout>

</LinearLayout>