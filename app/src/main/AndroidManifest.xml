<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ruanyun.campus.teacher"
    android:versionCode="66"
    android:versionName="6.6" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.RUN_INSTRUMENTATION" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
	<uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION" />
	 <uses-permission android:name="android.permission.ACCESS_DOWNLOAD_MANAGER" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <application
        android:name=".CampusApplication"
        android:icon="@mipmap/ic_launcher_new"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config"
        >
       

        <activity
            android:name="com.ruanyun.campus.teacher.activity.CutImageActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@style/AppBaseTheme">
        </activity>
        <activity
            android:name="com.ruanyun.campus.teacher.activity.ExperienceActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>

        <activity
            android:name="com.ruanyun.campus.teacher.activity.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
            
        </activity>
        <activity
            android:name="com.ruanyun.campus.teacher.activity.StudentInfoActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name="org.achartengine.GraphicalActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ruanyun.campus.teacher.activity.SysSettingActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>

        <activity
            android:name="com.ruanyun.campus.teacher.activity.ChatMsgActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustUnspecified"
             android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>

        <activity
            android:name="com.ruanyun.campus.teacher.activity.SubjectActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name="com.ruanyun.campus.teacher.activity.TabHostActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Tab">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data android:scheme="cundong" android:host="splash"/>
			</intent-filter>
        </activity>

        <activity
            android:name="com.ruanyun.campus.teacher.activity.ContactsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" >
        </activity>
        <activity
            android:name="com.ruanyun.campus.teacher.activity.ChatFriendActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>

        <activity
            android:name="com.ruanyun.campus.teacher.activity.FeedbackActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>


        <activity
            android:name="com.ruanyun.campus.teacher.activity.TabSchoolActivtiy"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ruanyun.campus.teacher.activity.SchoolActivity"
            android:screenOrientation="portrait" 
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
        <activity
            android:name="com.ruanyun.campus.teacher.activity.SchoolDetailActivity"
            android:screenOrientation="portrait" 
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:windowSoftInputMode="adjustPan">
            
        </activity>
        <activity
            android:name="com.ruanyun.campus.teacher.activity.ClassDetailActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" 
            android:configChanges="orientation|keyboardHidden|screenSize"/>
        <activity
            android:name="com.ruanyun.campus.teacher.activity.CurriculumActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ruanyun.campus.teacher.activity.CallClassActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ruanyun.campus.teacher.activity.CourseClassActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name="com.ruanyun.campus.teacher.activity.TestClassActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ruanyun.campus.teacher.activity.SummaryClassActivity"
            android:screenOrientation="portrait" 
            android:configChanges="orientation|keyboardHidden|screenSize"/>
        <activity
            android:name="com.ruanyun.campus.teacher.activity.AlbumActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.ruanyun.campus.teacher.activity.ImagesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ruanyun.campus.teacher.activity.WebSiteActivity"
            android:screenOrientation="portrait" android:hardwareAccelerated="true"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation" >
        </activity>
		<activity
            android:name="com.ruanyun.campus.teacher.activity.ShowPersonInfo"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize" >
        </activity>
        <activity
            android:name="com.ruanyun.campus.teacher.activity.ContactsSelectActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ruanyun.campus.teacher.activity.LocalDocument"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ruanyun.campus.teacher.activity.AlbumFlowActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
		<activity
            android:name="com.ruanyun.campus.teacher.activity.AlbumShowImagePage"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ruanyun.campus.teacher.activity.AlbumShowImageDetail"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ruanyun.campus.teacher.activity.AlbumPersonalActivity"
            android:screenOrientation="portrait" 
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
        <activity
            android:name="com.ruanyun.campus.teacher.activity.AlbumShowMessage"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ruanyun.campus.teacher.activity.ChangePwdActivity"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name="com.ruanyun.campus.teacher.activity.CaptureActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name="com.ruanyun.campus.teacher.activity.StudentSelectActivity"
            android:screenOrientation="portrait" >
        </activity>
        <receiver
            android:name="com.ruanyun.campus.teacher.service.Alarmreceiver" android:exported="true">
        </receiver>
		<receiver android:name="com.ruanyun.campus.teacher.service.CompleteReceiver">
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE"/>
                <action android:name="android.intent.action.DOWNLOAD_NOTIFICATION_CLICKED"/>
            </intent-filter>
        </receiver>
        <receiver android:name="com.ruanyun.campus.teacher.MeizuTestReceiver">
            <intent-filter>
                <!-- 接收push消息 -->
                <action android:name="com.meizu.flyme.push.intent.MESSAGE" />
                <!-- 接收register消息 -->
                <action android:name="com.meizu.flyme.push.intent.REGISTER.FEEDBACK" />
                <!-- 接收unregister消息-->
                <action android:name="com.meizu.flyme.push.intent.UNREGISTER.FEEDBACK" />
                <!-- 兼容低版本Flyme3推送服务配置 -->
                <action android:name="com.meizu.c2dm.intent.REGISTRATION" />
                <action android:name="com.meizu.c2dm.intent.RECEIVE" />

                <category android:name="com.ruanyun.campus.teacher"></category>
            </intent-filter>
        </receiver>
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.ruanyun.campus.teacher.fileProvider"
            android:grantUriPermissions="true"
            android:exported="false">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>

    </application>

</manifest>